<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mycardboarddreams.jacobsladder">

    <uses-feature
        android:name="android.software.live_wallpaper"
        android:required="true" >
    </uses-feature>

    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name" >

        <service
            android:name="com.mycardboarddreams.jacobsladder.template.TemplateWallpaperService"
            android:label="@string/app_name"
            android:icon="@mipmap/logo"
            android:permission="android.permission.BIND_WALLPAPER" >
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.mycardboarddreams.jacobsladder.START_WALLPAPER"/>
            </intent-filter>
            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/whitewallpaper" />
        </service>

        <activity
            android:name="com.mycardboarddreams.jacobsladder.template.TemplateSettings"
            android:launchMode="singleTop"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/app_name"
            android:icon="@mipmap/logo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Add your actual key here -->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="fake_key" />

    </application>

</manifest>